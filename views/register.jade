extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='#') Drawing App
        #navbar.navbar-collapse.collapse.navbar-right
    .container
      .row
        .col-sm-6.col-md-4.col-md-offset-4
          h2.text-center.login-title Provide your credentials
          .signup.text-center
            form.form-signin(action='/signup', method='POST')
              input.form-control(type='text', name='username', placeholder='Login', required='', autofocus='')
              input.form-control.nomargin(type='password', name='password', placeholder='Password', required='')
              input.form-control(type='email', name='email', placeholder='e-mail', required='')
              input.form-control(type='text', name='firstName', placeholder='Name', required='')
              input.form-control(type='text', name='lastName', placeholder='Last Name', required='')
              button.btn.btn-primary(type='submit') Sign up
              span.clearfix
                    #message
                        if message
                            h1.text-center.error-message #{message}