extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='#') Drawing App
        #navbar.navbar-collapse.collapse.navbar-right
          ul.nav.navbar-nav
            li
              a(href='/signup') Sign up
    .container
      .row
        .col-sm-6.col-md-4.col-md-offset-4
          .account.text-center
            form.form-signin(action='/login', method='POST')
              input.form-control(type='text', name='username', placeholder='Login', required='', autofocus='')
              input.form-control(type='password', name='password', placeholder='Password', required='')
              button.btn.btn-success(type='submit') Sign in
              span.clearfix
          #message
          h1.text-center.error-message #{message}